<?xml version="1.0"?>

<object name="portal_controlpanel" meta_type="Plone Control Panel Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="inqbus.tagging">

  <configlet title="Keyword Manager"
    action_id="keywordmanager"
    appId="inqbus.tagging"
    category="Products"
    condition_expr=""
    icon_expr="string:${portal_url}/book_icon.png"
    url_expr="string:${portal_url}/keyword_manager_view"
    i18n:attributes="title"
    visible="True">

  <permission>Manage Keywords</permission>

  </configlet>

  <configlet
        title="Inqbus Tagging Settings"
        action_id="inqbus.tagging.settings"
        appId="inqbus.tagging"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@inqbus-tagging-settings"
        icon_expr=""
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>